.kotak {
    background-color: #FFFFFF;
    text-align: center;
    padding: 20px;
    margin-right: 10px; /* Untuk memberikan jarak antara kotak secara horizontal */
    margin-bottom: 10px; /* Untuk memberikan jarak antara kotak secara vertikal */
    display: flex;
    align-items: center;
    justify-content: center;
    float: left; /* Mengatur kotak berdampingan */
    color: #130F49;
    border: 2px solid black;
    font-size: 25px;
    transition: ease-in 0.3s; /*agar ketrika bagian kotak di arahakan warna yang muncul smooth*/
}

.kotak:hover {
    background-color: #cecffff3;
}

